<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>temperature.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Tecnam-P92/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>/controls/lighting/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/engine/oil-temperature-degc</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>   9 </dep></entry>
      <entry><ind>  50 </ind><dep>  15 </dep></entry>
      <entry><ind>  60 </ind><dep>  20 </dep></entry>
      <entry><ind>  70 </ind><dep>  24 </dep></entry>
      <entry><ind>  80 </ind><dep>  28 </dep></entry>
      <entry><ind>  90 </ind><dep>  35 </dep></entry>
      <entry><ind> 100 </ind><dep>  44 </dep></entry>
      <entry><ind> 110 </ind><dep>  56 </dep></entry>
      <entry><ind> 120 </ind><dep>  70 </dep></entry>
      <entry><ind> 130 </ind><dep>  82 </dep></entry>
      <entry><ind> 140 </ind><dep>  92 </dep></entry>
      <entry><ind> 150 </ind><dep> 100 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.010 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>         
 
</PropertyList>
