<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>intporteG</object-name>
    <object-name>intporteD</object-name>
    <object-name>inttour</object-name>
    <object-name>poigne-left</object-name>
    <object-name>poigne-right</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Tecnam-P92/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.457 </x-m>
      <y-m> -0.201 </y-m>
      <z-m> -0.288 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Tecnam-P92/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.035 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.044 </z-m>
    </offsets>
  </model>

  <!-- Siège et banquette arrière -->
  <model>
    <path>Aircraft/Tecnam-P92/Models/Interior/Seat/seat.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </model>

  <!-- Robinet Fuel Left -->
  <model>
    <path>Aircraft/Tecnam-P92/Models/Interior/Panel/Instruments/fuel/fuel-left.xml</path>
    <offsets>
      <x-m> -1.739 </x-m>
      <y-m> -0.435 </y-m>
      <z-m> -0.054 </z-m>
    </offsets>
  </model>

  <!-- Robinet Fuel Right -->
  <model>
    <path>Aircraft/Tecnam-P92/Models/Interior/Panel/Instruments/fuel/fuel-right.xml</path>
    <offsets>
      <x-m> -1.739 </x-m>
      <y-m>  0.435 </y-m>
      <z-m> -0.054 </z-m>
      <roll-deg>      0 </roll-deg>
      <pitch-deg>    90 </pitch-deg>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <!-- Poignée gauche -->
  <model>
    <name>GripLeft</name>
    <path>Aircraft/Tecnam-P92/Models/Interior/Panel/Instruments/divers/poigneeL.xml</path>
    <offsets>
      <x-m> -1.657 </x-m>
      <y-m> -0.462 </y-m>
      <z-m> -0.172 </z-m>
    </offsets>
  </model>

  <!-- Poignée droite -->
  <model>
    <name>GripRight</name>
    <path>Aircraft/Tecnam-P92/Models/Interior/Panel/Instruments/divers/poigneeR.xml</path>
    <offsets>
      <x-m> -1.657 </x-m>
      <y-m>  0.462 </y-m>
      <z-m> -0.172 </z-m>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <!-- Porte -->
  <animation>
    <name>IntPorteGauche</name>
    <object-name>GripLeft</object-name>
    <object-name>intporteG</object-name>
    <object-name>intvitreG</object-name>
    <object-name>poigne-left</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntPorteGauche</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.crewexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteGauche</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -120 </factor>
    <center>
      <x-m> -1.790 </x-m>
      <y-m> -0.470 </y-m>
      <z-m> -0.293 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <name>IntPorteDroite</name>
    <object-name>GripRight</object-name>
    <object-name>intporteD</object-name>
    <object-name>intvitreD</object-name>
    <object-name>poigne-right</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntPorteDroite</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.passengerexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteDroite</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> 120 </factor>
    <center>
      <x-m> -1.790 </x-m>
      <y-m>  0.470 </y-m>
      <z-m> -0.293 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>

